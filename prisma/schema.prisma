generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       BigInt   @id @default(autoincrement())
  login    String
  password String

  @@map("users")
}

model Work {
  id     BigInt   @id @default(autoincrement())
  title  String
  photo  String

  @@map("works")
}

model Offer {
  id              BigInt   @id @default(autoincrement())
  title_project   String
  telephone       String
  description     String
  file            String

  @@map("offers")
}